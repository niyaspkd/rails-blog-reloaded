<!DOCTYPE html>
<html>
<head>
  <title>Blog1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body align="center" >


<div id="main_content">
	<div id="header">
		<div id ="left" style="float:left;">
	    <button class="button" style="padding-top:0px" >
	    <%= link_to "Blog Home", posts_path %>
		
	    </button>

		</div>
		<div class="buttons">
		<button class="button"><%= link_to "New Post", new_post_path %>
		</button>
		<button class="button">
		  <% if current_user %>
			  Signed in as <%= current_user.name %> | <%= link_to "Logout", logout_path , :method => :delete  %>

		  <% else %>
			  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
		  <% end %>
		</button></div>
	</div>
</div>






<% flash.each do |name,msg| %>
<%= content_tag(:div,msg,class:"alert")%>
<% end %>
</div>

<%= yield %>

</body>
</html>
